<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="data"
                type="com.kalashnyk.denys.defaultproject.presentation.adapter.paginglist.BaseCardModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/indentation_16"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

        <!--<com.google.android.material.circularreveal.cardview.CircularRevealCardView-->
        <!--android:id="@+id/crcvUserProfileImage"-->
        <!--android:layout_height="@dimen/view_params_45"-->
        <!--android:layout_width="@dimen/view_params_45"-->
        <!--android:layout_marginStart="@dimen/indentation_10"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:cardCornerRadius="@dimen/view_params_23">-->
        <ImageView
                android:id="@+id/crcvUserProfileImage"
                android:layout_width="@dimen/view_params_45"
                android:layout_height="@dimen/view_params_45"
                android:src="@color/soft_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/indentation_10"/>
        <!--</com.google.android.material.circularreveal.cardview.CircularRevealCardView>-->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/indentation_16"
                android:paddingEnd="0dp"
                app:layout_constraintLeft_toRightOf="@id/crcvUserProfileImage"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/indentation_8"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/james_richardson"
                    android:textColor="@color/grey_brown"
                    android:textSize="16sp"
                    android:textStyle="normal" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/indentation_8"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="-7sp"
                    android:text="@string/jurisprudence_law"
                    android:textColor="@color/grey_brown"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/indentation_8"
                    android:drawableStart="@drawable/ic_profile_location"
                    android:drawablePadding="@dimen/indentation_8"
                    android:fontFamily="sans-serif"
                    android:text="@string/san_fransisco_ca_usa"
                    android:textColor="@color/grey_brown"
                    android:textSize="12sp"
                    android:textStyle="normal" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>