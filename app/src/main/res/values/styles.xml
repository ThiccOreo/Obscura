<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTittleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertButtonStyle</item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AgreeCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>
    <style name="EditTextCommonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/soft_blue</item>
        <item name="colorControlActivated">@color/soft_blue</item>
        <item name="android:backgroundTint">@color/soft_blue</item>
    </style>
    <style name="TextInputLayout">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:colorControlHighlight">@color/hint_color</item>
        <item name="colorControlNormal">@color/soft_blue</item>
        <item name="android:colorActivatedHighlight">@color/soft_blue</item>
        <item name="android:colorControlActivated">@color/soft_blue</item>
        <item name="android:backgroundTint">@color/soft_blue</item>
        <item name="hintTextAppearance">@style/TextInputLayoutHint</item>
    </style>

    <style name="TextInputLayoutHint">
        <item name="colorAccent">@color/text_color_black</item>
        <item name="android:textSize">@dimen/txt_size_12</item>
        <item name="android:textColor">@color/soft_blue</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">@dimen/txt_size_18</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="TextStyle4">
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="TextStyle2">
        <item name="android:textSize">@dimen/txt_size_14</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextStyle3">
        <item name="android:textSize">@dimen/txt_size_12</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
